<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE4E1"
    android:padding="20dp"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="60dp"
        android:paddingBottom="60dp">

        <!-- Pink Box Container -->
        <LinearLayout
            android:orientation="vertical"
            android:background="#FFB6C1"
            android:padding="28dp"
            android:elevation="4dp"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <!-- Profile Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profileImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="32dp"
                android:contentDescription="Profile photo"
                android:scaleType="centerCrop"
                android:src="@drawable/profile"
                app:shapeAppearance="@style/CircleImageStyle"
                app:strokeColor="@android:color/darker_gray"
                app:strokeWidth="2dp" />

            <!-- Title -->
            <TextView
                android:text="About The Developer"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Name -->
            <TextView
                android:text="Name: Ezra Jokiri"
                android:textSize="20sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Student ID -->
            <TextView
                android:text="Student ID: 2023131541"
                android:textSize="20sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Course -->
            <TextView
                android:text="Course: ICT602 - Mobile Technology and Development"
                android:textSize="20sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- GitHub Label -->
            <TextView
                android:text="GitHub Page:"
                android:textSize="20sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- GitHub Link -->
            <TextView
                android:id="@+id/githubLink"
                android:text="https://github.com/Ezraaa2002?tab=repositories"
                android:textColor="#0000EE"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />

            <!-- Copyright -->
            <TextView
                android:text="Â© 2025 All rights reserved."
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
